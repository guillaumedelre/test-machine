<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Candidat</th>
            <th>Cat√©gories</th>
            <th>Statut</th>
            <th class="text-right">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.email }}</td>
                <td>{{ test.categories|length }}</td>
                <td>{% if test.startedAt is null %}TODO{% else %}DONE{% endif %}</td>
                <td class="text-right">
                    <a href="{{ url('app_test_launch', {id: test.id}) }}" target="_blank" data-toggle="tooltip" title="Lancer" class="btn btn-xs btn-default"><i class="glyphicon glyphicon-play"></i></a>
                    <a href="{{ url('admin_test_edit', {id: test.id}) }}" data-toggle="tooltip" title="Editer" class="btn btn-xs btn-info"><i class="glyphicon glyphicon-edit"></i></a>
                    <a href="{{ url('admin_test_delete', {id: test.id}) }}" data-toggle="tooltip" title="Supprimer" class="btn btn-xs btn-danger delete-link"><i class="glyphicon glyphicon-remove"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>