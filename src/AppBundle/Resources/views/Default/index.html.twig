{% extends "@App/layout.html.twig" %}

{% block content %}
    <form class="form" method="post" action="{{ url('app_default_launch') }}">
        <div class="form-group">
            <label>Email du candidat :</label>
            <input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email">
        </div>
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group">
                    <label for="number">Nombre de questions : <span id="lbNumber">20</span></label>
                    <input id="number" type="range" min="1" step="1" value="20" max="{{ count }}" class="form-control" name="number">
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <label for="time">Temps maximum: <span id="lbTime">60 minutes</span></label>
                    <input id="time" type="range" min="1" step="1" value="60" max="240" class="form-control" name="time">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Cat√©gories :</label>
            <div class="row">
                {% for category in categories %}
                    <div class="col-xs-4">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="category[]" value="{{ category }}"> {{ category }}
                            </label>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">Enregistrer</button>
        </div>
    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script>
    $(function(){
        $('input[type=range]').bind('change, mousemove', function(event) {
            $('#lbNumber').html($(this).val());
        })
    })
</script>
{% endblock %}
